package com.hatsnake.ever.chatting.controller;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpSession;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;

import com.hatsnake.ever.member.vo.MemberVO;

@Controller
public class ChatController {
	private Logger logger = LoggerFactory.getLogger(ChatController.class);
	
	@GetMapping("/chat")
	public void chat(Model model, HttpServletRequest req) {
		HttpSession session = req.getSession();
		MemberVO sessionMember = (MemberVO) session.getAttribute("member");
		logger.info("ChatController.chat() 함수 시작 - Username : " + sessionMember.getMid());
		model.addAttribute("mid", sessionMember.getMid());
	}
}
